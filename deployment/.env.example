# Docker Compose Environment Variables
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=predictive_maintenance

# Backend Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=9000

# JWT Configuration
ACCESS_TOKEN_KEY=your_access_token_secret_key_here
REFRESH_TOKEN_KEY=your_refresh_token_secret_key_here
ACCESS_TOKEN_AGE=3600

# Frontend Configuration (for Docker build)
VITE_API_BASE_URL=localhost
VITE_API_PORT=9000

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
